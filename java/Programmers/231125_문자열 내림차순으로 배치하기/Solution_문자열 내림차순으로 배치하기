import java.util.*;

class Solution {
    public String solution(String s) {
        String answer = "";
        StringBuffer sb = new StringBuffer();
        char[] c = s.toCharArray();
        
        Arrays.sort(c);
        
        for(int i = s.length() - 1; i >= 0; i--) {
            sb.append(c[i]);
        }
        
        return sb.toString();
    }
}
