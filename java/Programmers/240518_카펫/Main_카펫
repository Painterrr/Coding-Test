class Solution {
    public int[] solution(int brown, int yellow) {
        int[] answer = new int[2];
        
        for (int i = 1; i < 5000; i++) {
            if (yellow == (i * (yellow / i))) {
                if (brown == 2 * (i + (yellow / i)) + 4) {
                    answer[0] = i + 2;
                    answer[1] = yellow / i + 2;
                }
            }
        }
        
        return answer;
    }
}
